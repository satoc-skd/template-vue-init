{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": ["eslint:recommended", "plugin:vue/recommended"],
    "plugins": ["vue"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
        // ↓これを入れないと、Vue.componentやnew Vueで未定義のエラーが出る
        // "Vue": "readonly",
        // "dayjs": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "semi": [2, "always"]
    }
}